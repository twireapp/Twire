<?xml version="1.0" encoding="utf-8"?>
<io.codetail.widget.RevealFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/tooltip_nav_left"
            android:layout_width="@dimen/tooltip_nav_size"
            android:layout_height="@dimen/tooltip_nav_size"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/tooltip_nav_left" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tooltip_nav_up"
                android:layout_width="@dimen/tooltip_nav_size"
                android:layout_height="@dimen/tooltip_nav_size"
                android:layout_gravity="center"
                android:visibility="gone"
                app:srcCompat="@drawable/tooltip_nav_up" />

            <TextView
                android:id="@+id/tooltip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tooltip_bg"
                android:gravity="center"
                android:padding="@dimen/tooltip_text_padding"
                android:textColor="@color/white_text"
                android:textSize="@dimen/tooltip_text_size"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</io.codetail.widget.RevealFrameLayout>
